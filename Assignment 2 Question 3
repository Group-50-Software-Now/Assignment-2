import turtle

def draw_edge(t, length, depth):
    # If depth is 0, stop recursion so the program does not run forever
    if depth == 0:
        t.forward(length)
        return

    # Splitting the line into three parts helps create the indentation shape
    part = length / 3

    draw_edge(t, part, depth - 1)
    t.left(60)   # Turning creates the triangular dent
    draw_edge(t, part, depth - 1)
    t.right(120) # This turn points the turtle inward
    draw_edge(t, part, depth - 1)
    t.left(60)   # Reset direction back to normal
    draw_edge(t, part, depth - 1)


def draw_polygon(t, sides, length, depth):
    # The angle is needed so the polygon closes properly
    angle = 360 / sides

    for _ in range(sides):
        draw_edge(t, length, depth)
        t.right(angle)


# ----- user input with simple checking -----
sides = int(input("Enter number of sides (3 or more): "))
while sides < 3:
    sides = int(input("Please enter 3 or more sides: "))

length = int(input("Enter side length (positive number): "))
while length <= 0:
    length = int(input("Please enter a positive number: "))

depth = int(input("Enter recursion depth (0 or more): "))
while depth < 0:
    depth = int(input("Please enter 0 or more: "))


# ----- turtle setup -----
screen = turtle.Screen()
screen.bgcolor("white")

t = turtle.Turtle()
t.speed(0)

# Moving the turtle helps keep the shape visible on screen
t.penup()
t.goto(-length / 2, length / 2)
t.pendown()

draw_polygon(t, sides, length, depth)

turtle.done()



    
