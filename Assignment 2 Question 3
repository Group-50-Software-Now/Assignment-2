import turtle


def draw_edge(t, length, depth):
    """
    Recursively draws one edge with an inward triangular indentation.
    """
    # Base case: draw a straight line when no more recursion is needed
    if depth == 0:
        t.forward(length)
        return

    # Each edge is divided into three equal parts
    part = length / 3

    # First segment
    draw_edge(t, part, depth - 1)

    # Inward indentation using an equilateral triangle
    t.right(60)
    draw_edge(t, part, depth - 1)

    t.left(120)
    draw_edge(t, part, depth - 1)

    t.right(60)

    # Final segment
    draw_edge(t, part, depth - 1)


def draw_polygon(t, sides, length, depth):
    """
    Draws a regular polygon where each side uses the recursive edge pattern.
    """
    angle = 360 / sides

    for _ in range(sides):
        draw_edge(t, length, depth)
        t.right(angle)


# ----------- User Input (with validation) -----------

sides = int(input("Enter the number of sides (3 or more): "))
while sides < 3:
    sides = int(input("Please enter 3 or more sides: "))

length = float(input("Enter the side length (positive number): "))
while length <= 0:
    length = float(input("Please enter a positive number: "))

depth = int(input("Enter the recursion depth (0 or more): "))
while depth < 0:
    depth = int(input("Please enter 0 or more: "))


# ----------- Turtle Setup -----------

screen = turtle.Screen()
screen.bgcolor("white")

t = turtle.Turtle()
t.speed(0)
t.hideturtle()

# Move turtle so the shape fits on the screen
t.penup()
t.goto(-length / 2, length / 3)
t.pendown()

# Draw the pattern
draw_polygon(t, sides, length, depth)

turtle.done()


    
